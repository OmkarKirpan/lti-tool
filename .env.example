# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-change-in-production
FLASK_ENV=development

# Session Configuration
# Options: filesystem, redis, memcached
SESSION_TYPE=filesystem
SESSION_COOKIE_DOMAIN=

# Redis Configuration (if using Redis for sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Tool Configuration
TOOL_NAME=Minimal LTI 1.3 Tool
TOOL_DESCRIPTION=A minimal LTI 1.3 tool for OpenEdX integration
TOOL_SUPPORT_EMAIL=support@example.com

# URLs (update for production)
TOOL_BASE_URL=http://localhost:5000
OPENEDX_BASE_URL=https://courses.edx.org

# Logging
LOG_LEVEL=INFO
LOG_FILE=lti_tool.log

# Security
ALLOWED_HOSTS=*

# Database (if needed in future)
DATABASE_URL=sqlite:///lti_tool.db

# File Upload (if needed)
UPLOAD_FOLDER=uploads